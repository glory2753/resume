<main>

<div class="card mb-5">
    <div class="nav">
        {{#each navigation.links }}
            <div class="nav-item mx-3 mt-2 pb-2">
                <a href="{{href}}" class="nav-link {{#if @last}}disabled{{/if}}">{{text}}</a>
            </div>
        {{/each}}
    </div>
</div>


{{!-- тут --}}
<div class="my-4"><h1>{{header}}</h1></div>
  {{#with contacts_data}}
  <div class="row mb-3">
    <div class="col-8">
  <h2 class="coll-4">{{title}}</h2>
      
    
    {{#each buttons}}
      {{#if isPrimary}}
        <div
          class='btn btn-warning text-light'
        >{{text}}</div>
      {{/if}}
      {{#if isOutline}}
        <div class='btn btn-outline-warning'>{{text}}</div>
      {{/if}}
    {{/each}}    

    
    
    {{#with form}}
      {{#each input}}      
        {{#with this}}
        <div>
          <div class="col-8">
          <label class="form-text">{{label}}</label>
          <input class="form-control" placeholder={{placeholder}}>
          <div class="form-text">{{caption}}</div>
          </div>
          </div>
        {{/with}}
       
      
      {{/each}}

      <div>
        <hr>
      </div>   
      
      <div class="my-4">
      {{#with switch}}       
        <div class="form-label"></div>
        <div class="form-check form-switch">
        <label class="form-check-label">{{0.text}}</label>
        <input  type="checkbox" class="form-check-input"></input>
        </div>    
        <div class="form-label"></div>
        <div class="form-check form-switch">
        <label class="form-check-label">{{1.text}}</label>
        <input  type="checkbox" class="form-check-input"></input>
        </div>        
      {{/with}}
    {{/with}}
    </div>
    </div>
  {{/with}}

   
  
  <div class="col-4">
  <div class="card mb-3">
    <div class="card-body p-2">
  {{#each action_block}}  
    {{#if isSuccess}}
      <div class="btn btn-success btn-sm m-1">{{text}}</div>
    {{/if}}
    {{#if isDanger}}
      <div class="btn btn-danger btn-sm m-1">{{text}}</div>
    {{/if}}
    {{#if isInfo}}
      <div class="btn btn-info btn-sm m-1">{{text}}</div>
    {{/if}}  
  {{/each}}
  </div>
  </div>
  
  

  <div class="card">
  {{#with total}}
    <div class="card-title display-4">{{title}}</div>
    <div class="card-body p-1">
    {{#each item_list}}
    {{#with this}}
      <p>{{name}}, {{price}}</p>
    {{/with}}
    {{/each}}
    <div><hr></div>
    {{#each additional_info}}
    {{#with this}}
      <p>{{text}}, {{value}}</p>
    {{/with}}
    {{/each}}
    <div><hr></div>
    {{#with total_price}}
      <p>{{text}}: {{value}}</p>
    {{/with}}
    <div><hr></div>
    {{#each button}}
      {{#if isPrimary}}
        <div class='btn btn-primary btn-sm'>{{text}}</div>
      {{/if}}
      {{#if isOutline}}
        <div class='btn btn-outline-primary btn-sm mt-2'>{{text}}</div>
      {{/if}}
    {{/each}}
    </div>
  {{/with}}
  </div>
  </div>

