<main>
{{!-- меню навігації --}}

  <div class="card mb-4">
    <div class="nav nav-tabs">
      {{#with navigation}}
        {{#with links}}
          <a
            href={{0.href}}
            class="nav-link">{{0.text}}</a>
          <a
            href={{1.href}}
            class="nav-link">{{1.text}}</a>
          <a
            href={{2.href}}
            class="nav-link disabled">{{2.text}}</a>
        {{/with}}
      {{/with}}
    </div>
  </div>

  <div class="row">
    {{#with formBlock}}
      <div class="mt-4"><h1>{{header}}</h1></div>
      {{#with rating}}
        <div class="text my-3">{{title}}: {{value}}</div>    
     {{/with}}

{{!-- NAV розкладка --}}

    {{#with actionBlock}}
        <div class="col-8">
        <div class="nav nav-tabs">
          {{#each tabs}}   
            {{#if isActive}}
              <div class='nav-item col-4'>
                <a class="nav-item nav-link active text-black text-center">
                  {{text}}</a>
              </div>
            {{else}}            
              <div class='nav-item col-4'>
                <a class="nav-link ms-4">{{text}}</a>
              </div>
            {{/if}}
          {{/each}}
        </div>  
        
        <div class="my-5">
          <hr>
        </div>           
        
{{!-- карт=текст=кнопка --}}

        {{#with report}}

        <div class="card p-3">
        <div class="text mb-2">{{title}}</div>
        {{#with button}}
          <div
            class="btn btn-secondary col-4" href={{link}}>{{text}}
          </div>
        {{/with}}
        </div>
      {{/with}}
    {{/with}}

    <div class="my-5">
      <hr>
    </div>

    {{!-- три кнопки            --}}

    {{#with feedbackBlock}}

      <div class="text mb-5"><h3>{{title}}</h3>
      </div>
      <div>
      {{#each buttons}}
        {{#if isWarning}}
          <div class="btn btn-warning"href={{link}}>{{text}}
          </div>
        {{/if}}
        {{#if isSuccess}}
          <div class="btn btn-success" href={{link}}>{{text}}
          </div>
        {{/if}}
        {{#if isDanger}}
          <div class="btn btn-danger" href={{link}}>{{text}}
          </div>
        {{/if}}
      {{/each}}
      </div>
    {{/with}}    
    </div>

    {{!-- карт фото текст   --}}

    <div class="col-4">
    {{#with goodsInfo}}
    <div class="card p-3 mb-3">
      <img src={{photo}}>
      <div class='text mt-3'><b>{{name}}</b></div>
      </div>
      

      <div class="card p-3 mb-3">
      <div class='text'><b>{{price}}</b>
      </div>
      {{#if inMarket}}
        <div class='text mt-2'>в наявності</div>
      {{/if}}
      {{#each buttons}}
        {{#if isPrimary}}
          <div class="btn btn-primary my-3" href={{link}}>{{text}}
          </div>
        {{/if}}
        {{#if isSecondary}}
          <div class="btn btn-secondary" href={{link}}>{{text}}
          </div>
        {{/if}}
      {{/each}}
      </div>

      <div class="card p-3">
      {{#with seller}}
        <div class='text'>{{title}}: <b>{{value}}</b></div>
      {{/with}}
      </div>
      </div>
    {{/with}}
  {{/with}}
  </div>
  
  <div class="col-12 my-5">
    <hr>
  </div>

  {{!-- відгуки --}}

  <div class="row">
    <div class="col-12">

   {{#each reviewList}}
   <div class="card p-1 my-5">
    {{#with title}}
    <div class="card m-4">
      <div class="card-header">
      <div class="text">
        <b>{{userName}}</b>
      </div>
      <div class="text mb-1"
      >{{caption}}
      </div>
      <div class='text'>
        {{date}}
        </div>
      </div>
      
    {{/with}}
    {{#with reviewBody}}
    <div class="card-body">
      {{#with seller}}
        <div class="text mb-3">{{title}}: {{value}}</div>
      {{/with}}
      {{#with rating}}
        <div class="text mb-3">{{title}}: {{value}}</div>
     {{/with}}
      <div class="text mb-3">{{text}}</div>      
      {{#with advantages}}
        <div class="text"><b>{{title}}:</b>
        </div>
        <div class="text mb-3">{{text}}</div>
      {{/with}}
      {{#with disadvantages}}
        <div class="text"><b>{{title}}</b>:</div>
        <div class="text mb-4">{{text}}</div>
      {{/with}}
      {{#each images}}
        <img src={{this}} class="col-2 me-4">
      {{/each}}
      </div>
      </div>
      {{#each coments}}
      <div class="card col-11 ms-5 my-2">
        <div class="card-body">
        <div class="card-title text"><h5>{{userName}}</h5></div>
        <div class="text">{{date}}</div>
        <div class="text">{{text}}</div>
        </div>
        </div>
      {{/each}}
      </div>
    {{/with}}
  {{/each}}

  {{!-- карточка товару --}}

  {{#with goodsList}}
        {{#each this}}
        <div class="col-4">
            <div class="card mt-5">
                <img src="{{img}}" class="card-img-top">

                <div class="card-title">
                    {{#if isHot}}
                    <div class="badge bg-warning rounded-pill">ГАРЯЧЕ!</div>
                    {{/if}}

                    {{#if isNew}}
                    <div class="badge bg-primary rounded-pill">Нове!</div>
                    {{/if}}

                    <div>
                        {{#if isFast}}
                        <a class="btn btn-success">Швидка доставка!</a>
                        {{/if}}
                    </div>

                    <div>
                        {{#if isFree}}
                        <div class="btn btn-secondary">Безкоштовна доставка!</div>
                        {{/if}}
                    </div>

                    <h3 class="ms-2 mt-3">{{name}}</h3>
                    <p>{{review.amount}} {{review.text}}</p>
                    <b>{{price}}</b>
                    <p>{{delivery}}</p>
                    {{#with buttons}}
                    <a href="{{0.link}}" class="btn btn-primary">{{0.text}}</a>
                    <div>
                        <a href="{{1.link}}" class="btn btn-secondary mt-2">{{1.text}}</a>
                    </div>
                    {{/with}}

                    {{#each characteristics}}
                    <ul>
                        <li>
                            {{title}} {{value}}
                        </li>
                    </ul>
                    {{/each}}
                </div>
            </div>
        </div>
        {{/each}}
        {{/with}}
    
</div>
</div>

  {{!-- чекбокси+тайтл --}}

        {{#with filterBlock.filterList}}
            <div class="ms-3">{{1.title}}</div>

          <div class="ms-3 mt-3">
            <div class="form-check">
                <input class="form-check-input" type="checkbox">
                <label class="form-check-label">{{1.options.0.value}}</label>
            </div>

            <div class="form-check">
                <input class="form-check-input" type="checkbox">
                <label class="form-check-label">{{1.options.1.value}}</label>
            </div>

            <div class="form-check">
                <input class="form-check-input" type="checkbox">
                <label class="form-check-label">{{1.options.2.value}}</label>
            </div>

            <div class="form-check">
                <input class="form-check-input" type="checkbox">
                <label class="form-check-label">{{1.options.3.value}}</label>
            </div>
          </div>
        {{/with}}

        <hr class="mx-3 my-4">

  {{!-- тайтл+3 інпута row--}}

    <h1 class="ms-3 mt-5">{{header}}</h1>

    <div class="row">
  {{#each sortBlock}}
  <div class="col-3">
    <select class="form-select ms-3 mt-5">
      <option selected>{{placeholder}}</option>
      {{#each options}}
      <option value="{{value}}">{{text}}</option>
      {{/each}}
    </select>
  </div>
  {{/each}}
</div>

  {{!-- крихти --}}

    {{#with breadcrumb}}
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb ms-3 mt-5">
                <li class="breadcrumb-item"><a href="{{0.url}}">{{0.name}}</a></li>
                <li class="breadcrumb-item"><a href="{{1.url}}">{{1.name}}</a></li>
                <li class="breadcrumb-item"><a>{{2.name}}</a></li>
            </ol>
        </nav>
    {{/with}}

  {{!-- кард греен --}}

  {{#with service}}
  <div class="card text-bg-success">
    <div class="card-body text-center">
    <h3>{{title}}</h3>
    <div class="text">{{description}}</div>
    {{#each buttons}}
      <div href={{link}}
        class="btn btn-primary">{{text}}</div>
    {{/each}}
    </div>
    </div>
  {{/with}}
  </div>
  </div>

  <div class="mt-5 mb-2">
    <hr>
  </div>

  {{!-- футер --}}

  <div class="row">
      {{#each footer}}
      {{#with this}}
        <div class="nav col-2">
        <table class="col-1">
          <tbody><tr>
          <td><a href={{[0].link}} class=" nav-link">{{[0].text}}</a></td></tr>
          <td><a href={{[1].link}} class=" nav-link">{{[1].text}}</a></td></tr>
          <td><a href={{[2].link}} class=" nav-link">{{[2].text}}</a></td></tr>
          <td><a href={{[3].link}} class=" nav-link disabled">{{[3].text}}</a></td></tr>
           </tbody>
           </table>
           </div>
        {{/with}}
        {{/each}}
      </table>
      </div>

  

</main>